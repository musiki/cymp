filters:
  and:
    - file.folder == "06-out/obras"
    - file.ext != "base"
views:
  - type: cards
    name: cards
    order:
      - file.name
      - person
      - year
      - tags
    sort:
      - property: year
        direction: ASC
    image: note.img
  - type: table
    name: lista
    order:
      - file.name
      - year
      - person
    sort:
      - property: year
        direction: ASC
    image: note.img
    cardSize: 110
    imageAspectRatio: 0.85
